<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.create3droom.controller.RoomSetupController"
            fx:id="rootPane"
            prefWidth="600" prefHeight="400">

    <VBox spacing="10" layoutX="50" layoutY="30" prefWidth="500" AnchorPane.topAnchor="30" AnchorPane.leftAnchor="50"
          AnchorPane.rightAnchor="50" AnchorPane.bottomAnchor="30">
        <Label text="Введите параметры комнаты:" />

        <TextField fx:id="widthField" promptText="Ширина (м)" />
        <TextField fx:id="lengthField" promptText="Длина (м)" />
        <TextField fx:id="heightField" promptText="Высота (м)" />

        <Label text="Выберите тип комнаты:" />
        <ComboBox fx:id="roomTypeComboBox" promptText="Тип комнаты" />

        <HBox spacing="10">
            <Button fx:id="backButton" text="Назад" onAction="#onBackClicked" />
            <Button fx:id="nextButton" text="Далее" onAction="#onNextClicked" />
        </HBox>
    </VBox>
</AnchorPane>

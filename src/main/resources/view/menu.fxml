<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.create3droom.controller.MenuController">
    <children>
        <VBox alignment="CENTER" spacing="20"
              AnchorPane.topAnchor="50"
              AnchorPane.leftAnchor="50"
              AnchorPane.rightAnchor="50">
            <Label text="Добро пожаловать в 3D планировщик!" style="-fx-font-size: 24px;" />
            <Button fx:id="createRoomButton"
                    text="Создать комнату"
                    onAction="#onCreateRoomClicked"/>
            <Button fx:id="pastWorksButton"
                    text="Посмотреть прошлые работы"
                    onAction="#onShowPastWorksClicked"/>

        </VBox>
    </children>
</AnchorPane>
